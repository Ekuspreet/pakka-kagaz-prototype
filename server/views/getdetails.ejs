<div class="drawer lg:drawer-open">
  <input id="my-drawer-2" type="checkbox" class="drawer-toggle" />
  <div
    class="drawer-content flex flex-col items-center w-full h-fit my-auto gap-4 justify-center"
  >
    <!-- Page content here -->
    <label for="my-drawer-2" class="btn btn-primary drawer-button lg:hidden">
      Open drawer
    </label>
    <h1 class="w-full text-center">
      Connect Wallet and get Details of Idea Stamps
    </h1>
    <button
      id="connect-wallet"
      onclick="connectWallet()"
      class="btn btn-accent mt-2"
    >
      Connect wallet
    </button>
    <form id="get-idea-form" class="form-control">
      <input
        class="input input-bordered w-full"
        type="number"
        id="ideaId"
        placeholder="Idea ID"
        required
      />
    </form>

    <div class="overflow-x-auto">
      <table class="table">
        <tbody>
          <!-- row 1 -->
          <tr class="bg-base-200">
            <th>1</th>
            <td>Title</td>
            <td id="show-idea-1"></td>
          </tr>
          <!-- row 2 -->
          <tr>
            <th>2</th>
            <td>Inventor</td>
            <td id="show-idea-2"></td>
          </tr>
          <!-- row 3 -->
          <tr>
            <th>3</th>
            <td>Description</td>
            <td id="show-idea-3"></td>
          </tr>
          <!-- row 4 -->
          <tr>
            <th>4</th>
            <td>File URL</td>
            <td id="show-idea-4"></td>
          </tr>
        </tbody>
      </table>
    </div>
