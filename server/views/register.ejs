<div class="flex justify-center items-center h-screen">
  <div class="card glass w-96">
    <form class="card-header">
      <div class="card-body">
        <h2 class="card-title">Register now !!</h2>

        <div class="form-control gap-2">
          <label class="input input-bordered flex items-center gap-2">
            <%- include('./svgs/avatar.ejs') %>
            <input
              type="text"
              class="grow"
              name="phone_number"
              placeholder="Email"
            />
          </label>
          <label class="input input-bordered flex items-center gap-2">
            <%- include('./svgs/key.ejs') %>
            <input
              type="password"
              name="password"
              placeholder="Passward"
              class="grow"
            />
          </label>
          <label class="input input-bordered flex items-center gap-2">
            <%- include('./svgs/key.ejs') %>
            <input
              type="password"
              name="password"
              placeholder="Confirm Passward"
              class="grow"
            />
          </label>

          <div class="form-control">
            <label class="label cursor-pointer justify-start flex gap-1">
              <input type="checkbox" class="checkbox" />
              <span class="label-text">I Accept T&C </span>
            </label>
          </div>
        </div>

        <div class="card-actions flex items-center justify-between">
          <!-- <a class="link link-primary"> Forgot Password? </a> -->

          <button type="submit" class="btn btn-primary">
            Create your Account
          </button>
        </div>

        <div class="divider">or</div>

        <a class="link w-full text-center"> Already have Account </a>
      </div>
    </form>
  </div>
</div>
